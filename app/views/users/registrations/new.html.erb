<script src="https://use.fontawesome.com/1dec14be15.js"></script>
    <div class="container-fluid stylish-form">
      <h2 class="text-center">Sign up to start donating</h2>
      <div class="row mar20" >
        <div class="col-md-12 col-sm-12 col-xs-12">
          <div class="inner-section">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
              <div class="mar20 inside-form">
                <h2 class="font_white text-center">SIGN UP</h2>
                
                
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-envelope "></i></span>
                  <%= f.email_field :email, :class => 'form-control', :placeholder => 'Enter your email'%>
                </div>
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock "></i></span>
                  <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password'%>
                </div>
                <div class="input-group">
                  <span class="input-group-addon"><i class="fa fa-lock "></i></span>
                  <%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Confirm password'%>
                </div>
                <div class="footer text-center">
                  <%= f.submit  "Get Started", :class => 'btn btn-neutral btn-round btn-lg' %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
    </div>